root = true

# noinspection EditorConfigKeyCorrectness
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
continuation_indent_size = 4
trim_trailing_whitespace = true
max_line_length = 120
tab_width = 2
disabled_rules = import-ordering, no-wildcard-imports

[{*.kt, *.kts}]
tab_width = 4

[{*.md, *.mkd, *.markdown}]
max_line_length = 72
tab_width = 4
